{
  "name": "swift-sketch",
  "version": "1.0.0",
  "description": "Swift Sketch animation platform",
  "scripts": {
    "build": "grunt build",
    "build:sass": "grunt build:sass",
    "build:pug": "grunt build:pug",
    "build:ts": "tsc -p src/",
    "watch:sass": "grunt watch:sass",
    "watch:pug": "grunt watch:pug",
    "watch:ts": "tsc -p src/ -w",
    "serve": "lite-server -c=bs-config.json",
    "prestart": "npm run build",
    "start": "concurrently \"npm run watch:sass\" \"npm run watch:pug\" \"npm run watch:ts\" \"npm run serve\"",
    "lint": "standard ./src/**/*.ts -t verbose"
  },
  "keywords": [],
  "author": "Mesbah Mowlavi <m@ionx.ca>",
  "license": "MIT",
  "dependencies": {
    "@angular/common": "~2.4.0",
    "@angular/compiler": "~2.4.0",
    "@angular/core": "~2.4.0",
    "@angular/forms": "~2.4.0",
    "@angular/http": "~2.4.0",
    "@angular/platform-browser": "~2.4.0",
    "@angular/platform-browser-dynamic": "~2.4.0",
    "@angular/router": "~3.4.0",
    "core-js": "^2.4.1",
    "rxjs": "5.0.1",
    "systemjs": "0.19.40",
    "zone.js": "^0.7.4"
  },
  "devDependencies": {
    "@types/node": "^6.0.46",
    "canonical-path": "0.0.2",
    "concurrently": "^3.2.0",
    "grunt": "^1.0.1",
    "grunt-contrib-pug": "^1.0.0",
    "grunt-contrib-sass": "^1.0.0",
    "grunt-contrib-watch": "^1.0.0",
    "grunt-ts": "^6.0.0-beta.11",
    "lite-server": "^2.2.2",
    "lodash": "^4.16.4",
    "rimraf": "^2.5.4",
    "typescript": "~2.0.10",
    "typescript-standard": "^0.3.14"
  },
  "repository": {}
}
